{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ES2015",
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@api/*": [
        "./api/lambda/*"
      ]
    }
  },
  "include": [
    "src",
    "shared",
    "config",
    "modern.config.ts",
    "api"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
